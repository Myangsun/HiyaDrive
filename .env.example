# ============================================================================
# HiyaDrive Environment Configuration
# Copy this file to .env and fill in your API credentials
# ============================================================================

# Anthropic (Claude API)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Voice Processing
DEEPGRAM_API_KEY=your_deepgram_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=sarah  # voice identifier from ElevenLabs

# Google APIs
GOOGLE_CALENDAR_CREDENTIALS=path/to/google_calendar_credentials.json
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Database (For MVP: SQLite; Production: PostgreSQL)
DATABASE_URL=sqlite:///hiya_drive.db
# DATABASE_URL=postgresql://user:password@localhost:5432/hiya_drive

# Application Settings
APP_ENV=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO

# Voice Settings (Mac)
SAMPLE_RATE=16000  # Hz
CHANNELS=1  # Mono
AUDIO_CHUNK_SIZE=4096
VOICE_TIMEOUT=30  # seconds
SILENCE_THRESHOLD=-40  # dB

# Feature Flags
USE_MOCK_STT=False
USE_MOCK_TTS=False
USE_MOCK_CALENDAR=False
USE_MOCK_PLACES=False
USE_MOCK_TWILIO=False

# Demo Settings
DEMO_MODE=True
DEMO_RESTAURANT_NAME=Olive Garden
DEMO_RESTAURANT_PHONE=+1-555-0100
MAX_CALL_DURATION=120  # seconds
